@page
@model CapstoneProject.Pages.Albums.IndexModel

@{
    ViewData["Title"] = "Choose an Album!";
}

<head>
    <link rel="stylesheet" href="~/css/SammisStyles.css" type="text/css"/>
</head>

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Artist: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter"/>
        Genre: <select asp-for="AlbumGenres" asp-items="Model.Genre">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter"/>
        <a asp-page="./Index" asp-route-sortOrder="desc"
           style="float:right;background:lightblue;padding:5px;border-radius:10px;text-decoration:none;margin-bottom:10px;color:black;">
            Sort by Artist (ascending)
        </a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].AlbumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].AlbumStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Album) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumStatus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
